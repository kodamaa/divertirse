<%= form_for(@post) do |f| %>

<% if @post.errors.any?%>
<ul>
	<% @post.errors.full_messages.each do |msg| %>
	<li>
		<%= msg %>
	</li>
    <% end %>
</ul>
<% end %>

<div class="field">
	<%= f.label :title %>
	<%= f.text_field :title %>
</div>

<div class="field">
	<%= f.label :content %>
	<%= f.text_area :content, :rows => 5 %>
</div>

<div class="field">
	<%= f.label :author %>
	<%= f.text_field :author %>
</div>

<div class="field">
	<%= f.label :category %>
	<%= f.text_field :category %>
</div>

<div class="actions">
	<%= f.submit %>
</div>

<% end %>